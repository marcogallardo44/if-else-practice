// ConsoleApplication3.cpp : Defines the entry point for the console application.
//

#include <iostream>
#include <cmath>
#include <iomanip>
#include <string>



using namespace std;


int main()
{
	char grade;
	double number;

	cout << "Please input a number between 0 and 4: ";
	cin >> number;

	if (number >= 0 && number < .6)
	{
		cout << "Your letter grade is a F" << endl;
	}
	else if (number >= .6 && number < .9)

	{
		cout << "Your letter grade is a D-" << endl;
	}
	else if (number >= .9 && number <= 1.2)
	{
		cout << "Your letter grade is a D" << endl;
	}
	else if (number >= 1.3 && number <= 1.5)
	{
		cout << "Your letter grade is a D+" << endl;
	}
	else if (number >= 1.6 && number < 1.9)
	{
		cout << "Your letter grade is a C-" << endl;
	}
	else if (number >= 1.9 && number <= 2.2)
	{
		cout << "Your letter grade is a C" << endl;
	}
	else if (number >= 2.3 && number <= 2.5)
	{
		cout << "Your letter grade is a C+" << endl;
	}
	else if (number >= 2.6 && number < 2.9)
	{
		cout << "Your letter grade is a B-" << endl;
	}
	else if (number >= 2.9 && number <= 3.2)
	{
		cout << "Your letter grade is a B" << endl;
	}
	else if (number >= 3.3 && number <= 3.5)
	{
		cout << "Your letter grade is a B+" << endl;
	}
	else if (number >= 3.6 && number < 3.9)
	{
		cout << "Your letter grade is an A-" << endl;
	}
	else if (number >= 3.9 && number <= 4.0)
	{
		cout << "Your letter grade is an A" << endl;
	}
	


	system("pause");
    return main();
}

